#ifndef STREAMS_BOOST_TR1_RANDOM_INCLUDED
#  define STREAMS_BOOST_TR1_RANDOM_INCLUDED
#  include <streams_boost/tr1/detail/config_all.hpp>

#  ifdef STREAMS_BOOST_HAS_CPP_0X
#     ifdef STREAMS_BOOST_HAS_INCLUDE_NEXT
#        include_next <random>
#     else
#        include STREAMS_BOOST_TR1_STD_HEADER(random)
#     endif
#  endif

#  if !defined(STREAMS_BOOST_TR1_NO_RECURSION)
#  define STREAMS_BOOST_TR1_NO_RECURSION
#  ifdef STREAMS_BOOST_HAS_TR1_RANDOM
#     ifdef STREAMS_BOOST_HAS_INCLUDE_NEXT
#        include_next STREAMS_BOOST_TR1_HEADER(random)
#     else
#        include STREAMS_BOOST_TR1_STD_HEADER(STREAMS_BOOST_TR1_PATH(random))
#     endif
#  else
#     include <streams_boost/tr1/random.hpp>
#  endif
#  undef STREAMS_BOOST_TR1_NO_RECURSION
#  endif
#endif


